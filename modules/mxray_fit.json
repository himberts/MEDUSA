{
    "moduleid" : "mxray_fit"
    ,"label"    : "Fitting"
    ,"executable"   : "mxray_fitting.py"
    ,"submitpolicy" : "login"
    ,"dependencies" : [
        { "base" : "python3" }
	,{ "file" : "diffuse_analysis_v22_CUDA" }
        ,{ "conda" : [ "XrayLib.py", "numpy", "matplotlib", "fast_histogram" ] }
    ]
    ,"fields"   : [
        {
            "role"       : "input"
            ,"id"        : "label_0"
            ,"type"      : "label"
            ,"colspan"   : 3
            ,"default"   : "header3"
            ,"label"     : "Fitting"
            ,"prehline"  : "true"
            ,"posthline" : "true"
        }
        ,{
            "role"       : "input"
            ,"id"        : "FitPar"
            ,"type"      : "label"
            ,"colspan"   : 3
            ,"default"   : "header4"
            ,"label"     : "Fit Parameter"
            ,"posthline" : "true"
        }
        ,{
            "role"       : "input"
            ,"id"         : "xi"
            ,"label"      : "&#958 (&#8491)"
            ,"type"       : "float"
            ,"step"       : 0.1
	          ,"default"    : 87.3982
            ,"help"       : "Calle Parameter xi"
        }
        ,{
            "role"       : "input"
            ,"id"         : "eta"
            ,"label"      : "&#951 (a.u.)"
            ,"type"       : "float"
            ,"step"       : 0.01
            ,"default"    : 0.12274
            ,"help"       : "Calle Parameter Eta"
        }
      ,{
            "role"       : "input"
            ,"id"         : "q"
            ,"label"      : "d-spacing in q (&#8491<sup>-1</sup>)"
            ,"type"       : "float"
            ,"step"       : 0.01
            ,"default"    : 0.1
            ,"help"       : "Membrane d-spacing in reciprocal space"
        }
          ,{
              "role"       : "input"
              ,"id"         : "lr"
              ,"label"      : "Domain Size Lr (&#8491)"
              ,"type"       : "float"
              ,"step"       : 1
              ,"default"    : 300
              ,"min"        : 300
              ,"max"        : 10000
              ,"help"       : "Enter the accessible domain size Lr in Angstrom"
          }
          ,{
              "role"       : "input"
              ,"id"         : "sr"
              ,"label"      : "Domain Size spread sr (&#8491)"
              ,"type"       : "float"
              ,"step"       : 1
              ,"default"    : 100
              ,"min"        : 100
              ,"max"        : 3000
              ,"help"       : "Enter the accessible domain size sr in Angstrom"
          }
        ,{
            "role"       : "output"
            ,"id"         : "kc"
            ,"label"      : "<hr> Bending Modulus (k<sub>B</sub>T) <hr>"
            ,"type"       : "text"
        }
        ,{
            "role"       : "output"
            ,"id"         : "B"
            ,"label"      : "<hr> Interaction Modulus (k<sub>B</sub>T/&#8491<sup>4</sup>) <hr>"
            ,"type"       : "text"
        }
        ,{
            "role"       : "output"
            ,"id"         : "Fit"
            ,"label"      : "Fit Results"
            ,"type"       : "file"
            ,"help"       : "The calculated fit"
        }
        ,{
            "role"        : "output"
            ,"id"         : "xisquareGraph"
            ,"type"       : "plotly"
            ,"label"      : "XiSquare Convergence"
        }
        ,{
            "role"        : "output"
            ,"id"         : "fitresults"
            ,"type"       : "plotly"
            ,"label"      : "Fit Results"
        }
    ]
}
