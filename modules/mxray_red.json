{
    "moduleid" : "mxray_red"
    ,"label"    : "MXray"
    ,"executable"   : "mxray_reduction.py"
    ,"submitpolicy" : "login"
    ,"dependencies" : [
        { "base" : "python3" }
	,{ "file" : "diffuse_analysis_v21_CUDA" }
        ,{ "conda" : [ "XrayLib.py", "numpy", "matplotlib", "fast_histogram" ] }
    ]
    ,"fields"   : [
        {
            "role"       : "input"
            ,"id"        : "label_0"
            ,"type"      : "label"
            ,"colspan"   : 3
            ,"default"   : "header3"
            ,"label"     : "Reduction"
            ,"prehline"  : "true"
            ,"posthline" : "true"
        }
        ,{
            "role"       : "input",
            "id"         : "imageid",
            "name"       : "XRDSetup.jpg",
            "type"       : "image",
            "label"      : "Image",
            "alt"        : "X-ray Diffraction Setup",
            # colspan, height, width are optional, but specifying a too small colspan (column span) will effect the layout of columns in the input fields
            "colspan"    :  5,
            "width"      : 992,
            "height"     : 309
          }
        ,{
            "role"       : "input"
            ,"id"        : "FitPar"
            ,"type"      : "label"
            ,"colspan"   : 3
            ,"default"   : "header4"
            ,"label"     : "Reduction Parameter"
            ,"posthline" : "true"
        }
        ,{
            "role"       : "input"
            ,"id"         : "data"
            ,"label"      : "2D X-ray Data (.tiff)"
            ,"type"       : "file"
            ,"help"       : "2D X-ray Intesity (.tiff)"
        }
        ,{
              "role"       : "input"
              ,"id"         : "qparcuts"
              ,"label"      : "q-cut parameter (comma separated, e.g. 0.3,0.35)"
              ,"default"    : "0.3,0.35"
              ,"type"       : "textarea"
              ,"help"       : "q-values for cropping and fitting the data"
          }
          ,{
              "role"       : "input"
              ,"id"        : "InstrPar"
              ,"type"      : "label"
              ,"colspan"   : 3
              ,"default"   : "header4"
              ,"label"     : "Instrument Parameter"
              ,"posthline" : "true"
          }
        ,{
            "role"       : "input"
            ,"id"         : "sd"
            ,"label"      : "Sample to Detector Distance (mm)"
            ,"type"       : "float"
            ,"step"       : 0.1
            ,"default"    : 332.1269
	          ,"min"        : 0.1
	          ,"max"        : 1000
            ,"help"       : "Instrumental Parameter: minimal distance between sample and detector"
        }
	       ,{
            "role"        : "input"
            ,"id"         : "pxs"
            ,"label"      : "Detector Pixel Size (mm)"
            ,"type"       : "float"
            ,"step"       : 0.01
            ,"default"    : 0.1
            ,"min"        : 0.001
            ,"max"        : 1
            ,"help"       : "Detector Pixel Size. Only squared Pixels are supported"
        }
        ,{
            "role"       : "input"
            ,"id"         : "xorigin"
            ,"label"      : "Origin in X (pixel)"
            ,"type"       : "float"
            ,"step"       : 0.1
            ,"default"    : 410.983
            ,"min"        : 0.1
            ,"max"        : 4000
            ,"help"       : "X Location of the central beam (in pixel)"
        }
        ,{
            "role"       : "input"
            ,"id"         : "yorigin"
            ,"label"      : "Origin in y (pixel)"
            ,"type"       : "float"
            ,"step"       : 0.1
            ,"default"    : 0.5
            ,"min"        : 0.1
            ,"max"        : 4000
            ,"help"       : "Y Location of the central beam (in pixel)"
        }
        ,{
            "role"       : "input"
            ,"id"         : "lambda"
            ,"label"      : "lambda (Angstrom)"
            ,"type"       : "float"
            ,"step"       : 0.0001
            ,"default"    : 1.5418
            ,"min"        : 0.0001
            ,"max"        : 20
            ,"help"       : "Wavelength of the X-ray Source"
        }
        ,{
            "role"       : "input"
            ,"id"         : "distqpar"
            ,"label"      : "Distortion in qpar"
            ,"type"       : "checkbox"
            ,"default"    : "on"
            ,"help"       : "Distortion in q parrallel"
        }
        ,{
            "role"       : "input"
            ,"id"         : "distqz"
            ,"label"      : "Distortion in qz"
            ,"type"       : "checkbox"
            ,"default"    : "on"
            ,"help"       : "Distortion in q z"
        }
        ,{
            "role"    : "output",
            "id"      : "progressbar",
            "label"   : "Progress",
            "type"    : "progress",
            "max"     : 1.0
          }
        ,{
            "role"       : "output"
            ,"id"         : "reddat"
            ,"label"      : "Reduced Data"
            ,"type"       : "file"
            ,"help"       : "Reduced Data"
        }
        ,{
            "role"        : "output"
            ,"id"         : "Data2DPlotly"
            ,"type"       : "plotly"
            ,"label"      : "2D Results"
        }
    ]
}
